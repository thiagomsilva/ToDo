<div class='row mb-2'>
  <div class='col-8'>
    <h1 class='display-4'>Tarefas</h1>
  </div>

  <div class='col-4 mt-4 text-end'>
    <%= link_to 'Cadastrar tarefa', new_task_path, class: 'btn btn-success' %>
    <%= link_to 'Exportar CSV', export_csv_tasks_path, class: 'btn btn-info' %>
  </div>
</div>

<% if @tasks.any? %>
  <table class='table table-borderless'>
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Prazo</th>
        <th class='text-center pe-0'>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <%= render 'table_row', task: task %>

        <% task.sub_tasks.order(:due_date).each do |sub_task| %>
          <%= render 'table_row', task: sub_task %>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhuma tarefa foi cadastrada ainda.</p>
<% end %>